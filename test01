puts "Hello World"
# Can use "or" for strings, but 'is more efficient
puts 'Hello Wolrd'

#String concatenation

puts 'I like'+'Ruby'

#Escape sequence
puts 'It\'s my Ruby'
#New here, displays the string three times
puts 'Hello'*3

PI = 3.1416
puts PI

